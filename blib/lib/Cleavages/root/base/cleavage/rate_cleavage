<script type="script/javascript">
    function showLink() {
        var currentStyle = document.getElementById('rate_permalink').style;
        if (currentStyle.display != 'inline') {
            currentStyle.display = 'inline';
        } else {
            currentStyle.display = 'none';
        }
        console.log(currentStyle);
        return true;
    }
</script>
