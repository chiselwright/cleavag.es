<div class="rate_cleavage">
    [% PROCESS cleavage/rate_control %]

    [% c.image_tag("cleavage/${file.filepath}", {"alt" => "Cleavage", title => "Cleavage"}) %]
    <div class="align-center top-padded fake-buttons">
