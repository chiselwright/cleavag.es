        <a class="fake-button" href="javascript:void(0);" onClick="return showLink();">[%l('LINK')%]</a>
    </div>

    <form>
        <input type="text" id="rate_permalink" onFocus="this.select();" value="[%c.uri_for('/cleavage/rate', file.md5_hex)%]">
